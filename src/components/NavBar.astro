---
const routes = [
  { path: "/", name: "Home" },
  { path: "/#work", name: "Work" },
  { path: "/#about-me", name: "About Me" },
];

// Get the current path dynamically on the client side
let currentPath = "";
if (typeof window !== "undefined") {
  currentPath = window.location.pathname + window.location.hash;
}
---

<nav class="navbar">
  <ul class="navbar-list">
    {
      routes.map((route) => (
        <li class={currentPath === route.path ? "active" : ""}>
          <a href={route.path}>{route.name}</a>
        </li>
      ))
    }
  </ul>
</nav>

<style lang="scss">
  @use "../vars";

  .navbar {
    position: absolute;
    top: calc(50% - 106px);
    right: 26px;
    ul.navbar-list {
      margin: 0;
      padding: 0;
      list-style: none;
      display: grid;
      grid-template-rows: repeat(3, 1fr);
      gap: 40px;
      li {
        width: 4px;
        height: 50px;
        color: transparent;
        background-color: rgba(vars.$green, 60%);
        &.active {
          background-color: vars.$green;
        }
        a {
          font-size: vars.$font-size-xl;
          color: transparent;
          display: block;
          height: 100%;
          width: 25px;
          overflow: hidden;
        }
      }
    }
  }
  @media (min-width: 768px) {
    .navbar {
      position: static;
      ul.navbar-list {
        grid-template-rows: 1fr;
        grid-template-columns: repeat(3, 1fr);
        margin: 0 auto;
        width: 30%;
        justify-items: center;
        li {
          background-color: transparent;
          width: max-content;
          a {
            color: #ffffff8c;
            width: max-content;
          }
          &.active {
            background-color: transparent;
            a {
              position: relative;
              display: inline-block;
              padding-bottom: 5px;
              height: auto;
              color: vars.$green;
              &::after {
                content: "";
                position: absolute;
                left: 8px;
                bottom: 0;
                width: calc(100% - 12px); /* adjust the padding value */
                height: 1px;
                background-color: vars.$green;
              }
            }
          }
        }
      }
    }
  }
</style>
